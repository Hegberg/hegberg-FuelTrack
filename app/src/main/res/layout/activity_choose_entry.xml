<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hello.hegberg.hegberg_fueltrack.ChooseEntry">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_from_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <RadioGroup
        android:id="@+id/Group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignRight="@+id/ViewEntry"
        android:layout_alignEnd="@+id/ViewEntry"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/total_fuel_text"
        android:layout_above="@+id/total_fuel_cost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/EditEntry"
        android:layout_alignTop="@+id/back_from_view"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:id="@+id/ViewEntry"
        android:layout_alignTop="@+id/EditEntry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total Fuel Cost ($): "
        android:id="@+id/total_fuel_text"
        android:layout_above="@+id/back_from_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/total_fuel_cost"
        android:layout_alignTop="@+id/total_fuel_text"
        android:layout_toRightOf="@+id/total_fuel_text"
        android:layout_toEndOf="@+id/total_fuel_text" />

</RelativeLayout>
